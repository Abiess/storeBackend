{
  "dashboard": {
    "title": "markt.ma - API Monitoring",
    "tags": ["api", "errors", "monitoring"],
    "timezone": "Europe/Berlin",
    "panels": [
      {
        "id": 1,
        "title": "API Fehler (Letzte 24h)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [{
          "expr": "rate(api_errors_total[5m])",
          "legendFormat": "Fehler/Sekunde"
        }]
      },
      {
        "id": 2,
        "title": "API Fehler nach Endpoint",
        "type": "table",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [{
          "expr": "sum by (endpoint, status) (api_errors_detailed_total)"
        }]
      },
      {
        "id": 3,
        "title": "Response-Zeit (95. Perzentil)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [{
          "expr": "histogram_quantile(0.95, sum(rate(api_response_time_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}"
        }]
      },
      {
        "id": 4,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [{
          "expr": "sum by (status) (api_errors_detailed_total)"
        }]
      },
      {
        "id": 5,
        "title": "Authentication Fehler",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(auth_errors_total)"
        }]
      },
      {
        "id": 6,
        "title": "Database Fehler",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(database_errors_total)"
        }]
      },
      {
        "id": 7,
        "title": "Erfolgreiche Requests",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(api_success_total)"
        }]
      },
      {
        "id": 8,
        "title": "Fehlerrate %",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [{
          "expr": "sum(api_errors_total) / (sum(api_errors_total) + sum(api_success_total)) * 100"
        }]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  }
}

